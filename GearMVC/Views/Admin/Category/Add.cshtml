@model Application.DTO.LoaiLinhKienDTO

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".chungloai").addClass("admin-active");
        });
    </script>
}

@section Content{
    <div>
        <div class="admin-content-title"><b>Thêm chủng loại</b></div>
        <div class="admin-content">
            <div class="admin-form">
                @if (ViewBag.Message != null && ViewBag.Message != "")
                {
                    <div class="alert alert-success admin-error">@ViewBag.Message</div>
                }
                @Html.ValidationSummary(true)
            <form id="catalogAdd" method="post" name="catalogAdd" action="@Url.Action("AddPost", "Category")">
                <div class="admin-error row">
                    <div class="col-sm-3"></div>
                    <div>
                        @Html.ValidationMessageFor(m => m.MaLoai, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Name" class="col-sm-3 col-form-label">Mã Loại</label>
                    <div class="col-sm-8"><input type="text" class="form-control" id="MaLoai" name="MaLoai" value="@Model.MaLoai"></div>
                </div>
                <div class="admin-error row">
                    <div class="col-sm-3"></div>
                    <div>
                        @Html.ValidationMessageFor(m => m.Ten, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Name" class="col-sm-3 col-form-label">Tên</label>
                    <div class="col-sm-8"><input type="text" class="form-control" id="Ten" name="Ten" value="@Model.Ten"></div>
                </div>
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    <div class="admin-form-edit-button">
                        <button class="btn btn-warning admin-form-edit-button" type="submit"
                                form="catalogAdd" value="Submit">
                            Tạo
                        </button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
}

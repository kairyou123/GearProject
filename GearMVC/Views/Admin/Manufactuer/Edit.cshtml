@model Application.DTO.NhaCungCapDTO

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".nhacungcap").addClass("admin-active");
        });
    </script>
}

@section Content{
    <div>
        <div class="admin-content-title"><b>Sửa nhà sản xuất</b></div>
        <div class="admin-content">
            <div class="admin-form">
                @if (ViewBag.Message != null && ViewBag.Message != "")
                {
                    <div class="alert alert-success admin-error">@ViewBag.Message</div>
                }
                @Html.ValidationSummary(true)

            <form id="catalogAdd" method="post" name="catalogAdd" action="@Url.Action("EditPost", "Manufactuer", new { id = Model.Id })">
                <div class="admin-error row">
                    <div class="col-sm-3"></div>
                    <div>
                        @Html.ValidationMessageFor(m => m.MaNCC, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Name" class="col-sm-3 col-form-label">Mã Loại</label>
                    <div class="col-sm-8"><input data-val="true" type="text" class="form-control" id="MaNCC" name="MaNCC" value="@Model.MaNCC"></div>
                </div>
                <div class="admin-error row">
                    <div class="col-sm-3"></div>
                    <div>
                        @Html.ValidationMessageFor(m => m.TenNCC, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Name" class="col-sm-3 col-form-label">Tên</label>
                    <div class="col-sm-8"><input data-val="true" type="text" class="form-control" id="TenNCC" name="TenNCC" value="@Model.TenNCC"></div>
                </div>
                <div class="form-group row">
                    <label for="MoTa" class="col-sm-3 col-form-label">Mô tả</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" cols="4" rows="5" name="MoTa">@Model.MoTa</textarea>
                    </div>
                </div>
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    <div class="admin-form-edit-button">
                        <button class="btn btn-warning admin-form-edit-button" type="submit"
                                form="catalogAdd" value="Submit">
                            Sửa
                        </button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
}

@if(Model.PageCount > 0)
{
<div class="admin-pagination">
    <ul class="pagination pagination-centered">
        @{ 
            var Title = ViewData["nameController"];
            var NameFunction = ViewData["nameFunction"];
        }
        
        @if (Model.CurrentPage <= 1)
        {
            <li class="page-item">
                <span class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true"
                          data-page="1">«</span><span class="sr-only">Previous</span>
                </span>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(NameFunction.ToString(), Title.ToString() , new { searchString = Model.searchString, role = Model.role ,page = Model.CurrentPage - 1})" aria-label="Previous">
                    <span aria-hidden="true"
                          data-page="1">«</span><span class="sr-only">Previous</span>
                </a>
            </li>
        }

        @for (int i = 0; i < Model.PageCount; i++)
        {
            @if (i + 1 == Model.CurrentPage)
            {
                <li class="page-item active">
                    <span class="page-link" data-page="@(i+1)">@(i+1)</span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a href="@Url.Action(NameFunction.ToString(), Title.ToString(), new { searchString = Model.searchString, role = Model.role ,page = i + 1})">
                        <span class="page-link" data-page="@(i+1)">@(i+1)</span>
                    </a>
                </li>
            }

        }
        @if (Model.CurrentPage == Model.PageCount)
        {
            <li class="page-item">
                <span class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true"
                          data-page="1">»</span><span class="sr-only">Next</span>
                </span>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(NameFunction.ToString(), Title.ToString(), new { searchString = Model.searchString, role = Model.role ,page = Model.CurrentPage + 1})" aria-label="Next">
                    <span aria-hidden="true"
                          data-page="1">»</span><span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</div>
}
